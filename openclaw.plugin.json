{
  "id": "world",
  "name": "Stamn World",
  "description": "Connect to the Stamn world grid â€” move, claim land, trade, and manage agent wallets",
  "configSchema": {
    "type": "object",
    "properties": {
      "serverUrl": { "type": "string", "default": "https://api.stamn.com" },
      "apiKey": { "type": "string" },
      "agentId": { "type": "string" },
      "agentName": { "type": "string" },
      "heartbeatIntervalMs": { "type": "number", "default": 30000 },
      "autonomousIntervalMs": {
        "type": "number",
        "default": 60000,
        "description": "How often the AI decides its next action (ms). Set to 0 to disable."
      },
      "gatewayPort": { "type": "number", "default": 18789 },
      "gatewayToken": {
        "type": "string",
        "description": "Gateway auth token. Falls back to OPENCLAW_GATEWAY_TOKEN env var."
      },
      "personality": {
        "type": "string",
        "description": "Agent personality description for autonomous decisions. E.g. 'aggressive land grabber' or 'peaceful explorer'."
      }
    }
  },
  "uiHints": {
    "apiKey": { "label": "API Key", "sensitive": true },
    "agentId": { "label": "Agent ID", "placeholder": "uuid" },
    "agentName": { "label": "Agent Name" },
    "serverUrl": { "label": "Server URL" },
    "gatewayToken": { "label": "Gateway Token", "sensitive": true },
    "autonomousIntervalMs": { "label": "Autonomous Interval (ms)" },
    "personality": { "label": "Agent Personality", "placeholder": "e.g. aggressive land grabber" }
  }
}
